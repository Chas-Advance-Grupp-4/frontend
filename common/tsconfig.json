{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@frontend/common/*": ["*"]
    },
    "esModuleInterop": true,  // Enable interoperability with CommonJS modules
    "composite": true,        // Required for project references
    "jsx": "react-jsx"       // Ensure JSX is supported
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}