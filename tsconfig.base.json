{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@frontend/common/*": ["common/src/*"],
      "@frontend/common": ["common/src"],
      "@admin-frontend/*": ["admin-frontend/src/*"],
      "@admin-frontend": ["admin-frontend/src"],
    },
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
