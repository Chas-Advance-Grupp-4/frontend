{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"jsx": "react-jsx",
		"noEmit": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"../common/src/components",
		"../common/src/hooks",
		"../common/src/lib",
		"../common/src/types"
	],
	"exclude": [
		"node_modules",
		"dist",
		"../common/src/__tests__",
		"../common/src/__mocks__"
	]
}
